{
  "manifest_version": 3,
  "name": "Notion to Slides",
  "description": "Convert Notion pages into presentation slides",
  "version": "0.1.0",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "32": "icon-32.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://notion.so/*",
    "https://*.notion.so/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://notion.so/*",
        "https://*.notion.so/*"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "src/pages/content/style.css"
      ]
    }
  ],
  "commands": {
    "start-presentation": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Start Notion slide presentation"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": [
        "https://notion.so/*",
        "https://*.notion.so/*"
      ]
    }
  ]
}
